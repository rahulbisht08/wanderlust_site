<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filters{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2 rem;
        opacity: 0.7;
    }

    .filters:hover{
        opacity: 1;
        cursor: pointer;

    }

    .filters p {
        font-size: 0.8rem;
    }

    .tax-info{
        display: none;

    }

    .toggle-switch{
        border: 1px solid black;
        border-radius: 1rem;
        height: 2.5rem;
        padding: 0.5rem;
        margin-left:5rem;
        display: flex;
        align-items: center;

    }



</style>

<div id="filters">
    <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>trending</p>
    </div>
    <div class="filters">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>rooms</p>
    </div> <div class="filters">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>iconic cities</p>
    </div> <div class="filters">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>mountains</p>
    </div> <div class="filters">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>castles</p>
        </div>
        <div class="filters">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pool</p>
            </div>
            <div class="filters">
                <div><i class="fa-solid fa-tents"></i></div>
                <p>Camping</p>
                </div>
                <div class="filters">
                    <div><i class="fa-solid fa-ship"></i></div>
                    <p>boat</p>
                    </div>
                    <div class="filters">
                        <div><i class="fa-solid fa-igloo"></i></div>
                        <p>Domes</p>
                        </div>
        
    
    <div class="toggle-switch ms-auto">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
          </div>
    </div>
            
</div>
<!-- <br> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >

        <% for(let Listing of allListings) { %>
            <a href="/listings/<%=Listing._id%>" class="listing-link">

                <div class="card col listing-card" >
                    <img src="<%=Listing.image.url%>" class="card-img-top" alt="..." style="height:15rem">
                    <div class="card-img-overlay"></div>
                    
                    <div class="card-body">
                        <p class="card-text"><%=Listing.title %> <br> 
                            &#8377;<%=Listing.price%>/day
                        <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>

                        </p>
                        <br>
                        
                    </div>
                </div>
            </a>
                <% } %>

                <br><br>
            
            <!-- <ul>
                <% for(let Listing of allListings) { %>
                    <li><a href="/listings/<%=Listing._id %>"><%=Listing.title %></a></li>
                    <% } %>
                </ul> -->
    </div>
                <script>
                    let btn = document.getElementById("flexSwitchCheckDefault");
                    btn.addEventListener("click" , ()=>{
                    let taxinfo = document.getElementsByClassName("tax-info")
                    for (info of taxinfo){
                        if(info.style.display != "inline"){
                            info.style.display = "inline";
                        }
                        else{
                            info.style.display = "none";
                        }
                    }
                })
                </script>
</body>
